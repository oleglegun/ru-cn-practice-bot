{
    "globals": {
        "process": true
    },
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },

    "extends": ["eslint:recommended", "prettier"],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "no-process-env": 0,
        "no-console": 0
    }
}
